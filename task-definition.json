{
  "family": "django-polls-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "ramakrishna41/django-polls:latest",
      "cpu": 256,
      "memory": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000
        }
      ],
      "environment": [
        { "name": "DB_HOST", "value": "db" },
        { "name": "DB_PORT", "value": "3306" },
        { "name": "DB_NAME", "value": "django_polls" },
        { "name": "DB_USER", "value": "user" },
        { "name": "DB_PASSWORD", "value": "password" },
        { "name": "DJANGO_SUPERUSER_USERNAME", "value": "admin" },
        { "name": "DJANGO_SUPERUSER_EMAIL", "value": "admin@example.com" },
        { "name": "DJANGO_SUPERUSER_PASSWORD", "value": "ramakrishna" }
      ],
      "entryPoint": ["sh", "-c"],
      "command": [
        "python manage.py makemigrations && python manage.py migrate && python manage.py createsuperuser --noinput && python manage.py runserver 0.0.0.0:8000"
      ]
    },
    {
      "name": "db",
      "image": "mariadb:10.6.4-focal",
      "cpu": 256,
      "memory": 256,
      "environment": [
        { "name": "MYSQL_ROOT_PASSWORD", "value": "rootpassword" },
        { "name": "MYSQL_DATABASE", "value": "django_polls" },
        { "name": "MYSQL_USER", "value": "user" },
        { "name": "MYSQL_PASSWORD", "value": "password" },
        { "name": "MARIADB_ROOT_PASSWORD", "value":  "rootpassword"}
      ],
      "essential": true
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024"
}